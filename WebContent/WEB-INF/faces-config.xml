<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<resource-bundle>
			<base-name>com.exemplojsf.resource.exemplojsf</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>com.exemplojsf.resource.exemplojsf</message-bundle>
	</application>

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.exemplojsf.resource.exemplojsf</base-name>
			<var>exemplojsf</var>
		</resource-bundle>
		<message-bundle>com.exemplojsf.resource.exemplojsf</message-bundle>
	</application>

	<component>
		<component-type>org.primefaces.component.UltimaMenu</component-type>
		<component-class>org.primefaces.ultima.component.menu.UltimaMenu</component-class>
	</component>

	<render-kit>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.UltimaMenuRenderer</renderer-type>
			<renderer-class>org.primefaces.ultima.component.menu.UltimaMenuRenderer</renderer-class>
		</renderer>
	</render-kit>

	<managed-bean>
		<managed-bean-name>empresaMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.EmpresaMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>loginMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.LoginMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>menuLayoutMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.MenuLayoutMB</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>menuMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.MenuMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>objetoMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.ObjetoMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>perfilMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.PerfilMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>perfilObjetoMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.PerfilObjetoMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>sessionManaged</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.SessionManaged</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>sobreMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.SobreMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>trocaMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.TrocaMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>usuarioMB</managed-bean-name>
		<managed-bean-class>com.exemplojsf.managed.UsuarioMB</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<lifecycle>
		<phase-listener>com.exemplojsf.util.AuthorizationListener</phase-listener>
	</lifecycle>

</faces-config>
